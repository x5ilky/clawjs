{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Claw",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#definitions"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"definitions": {
			"patterns": [{
				"match": "(struct)\\s+([\\w!]+)",
				"captures": {
					"1": {
						"name": "keyword.control.claw"
					},
					"2": {
						"name": "entity.name.class.claw"
					}
				}
			}, {
				"match": "(import)",
				"captures": {
					"1": {
					"name": "keyword.claw"
					}
				}
			}, {
				"match": "(impl)\\s+([\\w!]+)",
				"captures": {
					"1": {
						"name": "keyword.control.claw"
					},
					"2": {
						"name": "entity.name.class.claw"
					}
				}
			}, {
				"match": "(fn)\\s+([\\w!]+)(<.*>)?\\(.*?\\)\\s*([\\w!]+)",
				"captures": {
					"1": { 
						"name": "keyword.control.claw"
					},
					"2": {
						"name": "entity.name.function.claw"
					},
					"3": {
						"name": "entity.name.type.claw"
					},
					"4": {
						"name": "entity.name.type.claw"
					}
				}
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.claw",
				"match": "\\b(if|while|for|return|if!|while!|for!|return|export|impl|interface)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.claw",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.claw",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash",
				"match": "\\/\\/.*$"
			}]
		}
	},
	"scopeName": "source.claw"
}